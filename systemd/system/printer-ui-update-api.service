[Unit]
Description=Printer UI Host Update API
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/printer-ui
Environment=UPDATE_API_PORT=9876
ExecStart=/usr/bin/node /opt/printer-ui/host-api/server.js
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
