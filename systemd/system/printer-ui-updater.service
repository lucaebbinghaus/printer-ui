[Unit]
Description=Printer UI Host Updater API
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/printer-ui
Environment=UPDATER_HOST=127.0.0.1
Environment=UPDATER_PORT=9123
Environment=UPDATER_TOKEN=CHANGE_ME_LONG_RANDOM_TOKEN
ExecStart=/usr/bin/python3 /opt/printer-ui/scripts/updaterd.py
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
